{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src", // Указывает корневую директорию с исходными файлами TypeScript
    "outDir": "./dist", // Директория для скомпилированных .js файлов.

    // Environment Settings
    // модули для компиляции
    "module": "esnext",
    "target": "esnext",
    //"types": [],

    // Other Outputs
    "sourceMap": true, // Генерирует .map файлы для отладки исходного кода в браузере
    "inlineSources": true, // <---
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true, // Строгая типизация
    "exactOptionalPropertyTypes": true, // Опциональные свойства (?) не могут быть

    // Recommended Options
    "strict": true,
    "noUncheckedSideEffectImports": true,
    "noUnusedLocals": false, // <---
    "noUnusedParameters": false, // <---
    "moduleDetection": "force",
    "skipLibCheck": true,
  },
  "include": ["src/**/*"]
}
